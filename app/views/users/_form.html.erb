<%= simple_form_for(@user, html: { class: "form-horizontal" }, wrapper: :horizontal_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username %>
    <%= f.input :mobile %>
    <%= f.input :age %>
    <%= f.input :sex %>
    <%= f.input :sn %>
    <%= f.input :used_at %>
  </div>

  <div class="form-horizonta">
    <%= f.button :submit %>
  </div>
<% end %>
